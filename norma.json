{
  "name": "Junction",
  "tasks": {
    "javascript": {
      "src": "lib/**/*",
      "dest": "out"
    },
    "mocha-casperjs": {
      "src": "tests/**/*"
    },
    "browser-sync": {
      "server": {
        "baseDir": "./workbench"
      },
      "tunnel": false,
      "files": ["./workbench/**/*"],
      "watch": "tests/**"
    },
    "copy": {
      "src": "out/junction",
      "dest": "./",
      "ext": [
        "js"
      ]
    }
  },
  "server": {
    "host": "tests",
    "port": "3000"
  }
}