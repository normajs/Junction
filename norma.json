{
  "name": "Junction",
  "tasks": {
    "javascript": {
      "src": "lib/**/*",
      "dest": "out"
    },
    "mocha-casperjs": {
      "src": "tests/**/*"
    },
    "browser-sync": {
      "root": "./",
      "watch": "tests/**"
    },
    "copy": {
      "src": "out/junction",
      "dest": "./",
      "ext": [
        "js"
      ]
    }
  },
  "server": {
    "host": "tests",
    "port": "3000"
  }
}